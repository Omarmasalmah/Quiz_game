<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCC7C7"
    android:backgroundTint="#DCD3D3">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="443dp"
        android:layout_height="110dp"
        android:background="#DD0416"
        android:backgroundTint="#07E169"
        android:paddingTop="40dp"
        android:text="Result"
        android:textAlignment="center"
        android:textColor="#040303"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CCC7C7"
        android:backgroundTint="#DCD3D3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:id="@+id/textView_status"
            android:layout_width="wrap_content"
            android:layout_height="146dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:paddingTop="40dp"
            android:text="Status"
            android:textAlignment="center"
            android:textColor="#070404"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#CCC7C7"
        android:backgroundTint="#DCD3D3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button_reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView_final_score"
            android:layout_width="match_parent"
            android:layout_height="323dp"
            android:layout_weight="1"
            android:background="#CCC7C7"
            android:backgroundTint="#DCD3D3"
            android:paddingTop="50dp"
            android:text="Score: 0/5"
            android:textAlignment="center"
            android:textColor="#070606"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/button_reset"
        android:layout_width="289dp"
        android:layout_height="120dp"
        android:backgroundTint="#ED0101"
        android:text="Reset Quiz"
        android:textAlignment="center"
        android:textColor="#F6F4F4"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:text="Reset Quiz" />

</androidx.constraintlayout.widget.ConstraintLayout>